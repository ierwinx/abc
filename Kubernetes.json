{
    "kind": "Deployment",
    "apiVersion": "extensions/v1beta1",
    "metadata": {
        "name": "microservicio",
        "namespace": "default",
        "labels": {
            "run": "microservicio"
        }
    },
    "spec": {
        "replicas": 2,
        "selector": {
            "matchLabels": {
                "run": "microservicio"
            }
        },
        "template": {
            "metadata": {
                "name": "microservicio",
                "labels": {
                    "run": "microservicio"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "microservicio",
                        "image": "ierwinx/microservicio:latest",
                        "ports": [
                            {
                                "containerPort": "8080",
                                "protocol": "TCP"
                            }
                        ],
                        "imagePullPolicy": "Always"
                    }
                ]
            }
        }
    }
}